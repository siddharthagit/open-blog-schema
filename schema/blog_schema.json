{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://github.com/siddharthagit/openapi-blog-schema/blog_schema.json",
  "description": "A representation of a Blog content in a webpage",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "description": "Unique id of the content"
    },
    "revid": {
      "type": "string",
      "description": "Revision Id of the document"
    },
    "lid": {
      "type": "string",
      "description": "Id of the content in the current context"
    },
    "dna": {
      "type": "object",
      "$ref" : "#/definitions/objectDna"
    },
    "url": {
      "type": "string",
      "description": "URL of the content"
    },
    "title": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "mainImage":{
      "type": "object",
      "$ref" : "#/definitions/mediaImage"
    },
    "contentImages": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "$ref" : "#/definitions/mediaImage"
        }
      ]
    },
    "paragraphs": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "$ref": "#/definitions/paragraph"
        }
      ]
    },
    "ui_lists": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/item_list"
        }
      ]
    },
    "tags": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "uuid": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "uuid"
          ]
        }
      ]
    },
    "category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "uuid"
      ]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "uuid",
        "icon"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "published",
        "inactive",
        "draft",
        "deleted"
      ]
    },
    "seo_meta": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "copyright": {
          "type": "string"
        },
        "descriptions": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          ]
        }
      },
      "required": [
        "title",
        "descriptions"
      ]
    },
    "og_meta": {
      "type": "object",
      "properties": {
        "og_image": {
          "type": "string"
        },
        "og_title": {
          "type": "string"
        },
        "og_description": {
          "type": "string"
        },
        "twitter_image": {
          "type": "string"
        },
        "twitter_title": {
          "type": "string"
        },
        "twitter_description": {
          "type": "string"
        }
      },
      "required": [
        "og_title",
        "og_description"
      ]
    },
    "meta": {
      "type": "object",
      "properties": {
        "lang": {
          "type": "string"
        },
        "createDate": {
          "type": "string"
        },
        "updateDate": {
          "type": "string"
        },
        "publishDate": {
          "type": "string"
        },
        "createdBy": {
          "type": "string"
        },
        "publishBy": {
          "type": "string"
        },
        "pagination": {
          "type": "object",
          "properties": {
            "page": {
              "type": "integer"
            },
            "total": {
              "type": "integer"
            }
          }
        }
      },
      "required": [
        "lang",
        "createdDate",
        "lastupdatedDate"
      ]
    }
  },
  "required": [
    "uuid",
    "lid",
    "title",
    "name",
    "summary",
    "content",
    "paragraphs",
    "tags",
    "category",
    "author",
    "status",
    "meta",
    "seo_meta"
  ],
  "definitions": {
    "paragraph": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "video",
            "image",
            "url",
            "text",
            "code"
          ]
        },
        "subtype": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        }
      },
      "required": [
        "heading"
      ]
    }
    ,
    "item_list": {
      "type": "object",
      "required" :["title", "items"],
      "properties": {
         "title":{
          "type" : "string"
        },
         "items": {
          "type": "array",
          "properties": {
            "heading": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            }
          },
          "required": [
            "heading", "content"
          ]
        }
      }
    },
    "mediaImage": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "base64": {
          "type": "string",
          "contentEncoding": "base64"
        }
      },
      "required": [
        "name"
      ]
    },
    "objectDna": {
      "type": "object",
      "properties": {
        "objectType": {
          "type": "string"
        },
        "objectVersion": {
          "type": "integer"
        }
      },
      "required": [
        "objectType"
      ]
    }
  }
  

}